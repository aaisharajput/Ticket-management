<html>
    <title>Change Password</title>
    <head>
      <!-- <%- include('links'); %> -->
      <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/css/bootstrap.min.css">
  <script src="https://cdn.jsdelivr.net/npm/jquery@3.6.4/dist/jquery.slim.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
  <script src="https://kit.fontawesome.com/a039ed4d19.js" crossorigin="anonymous"></script>
  <link href="https://fonts.googleapis.com/css2?family=Changa&family=Changa+One&display=swap" rel="stylesheet">
  <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/owl.carousel.min.js"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/OwlCarousel2/2.3.4/assets/owl.carousel.min.css">

        <style>
          .form{
            width: 40%;
          }
          .btn{
            background-color:#951ac9;
            color: #fff;
            border: none;
          }
          .btn:hover{
            color: #fff;
            background-color:#c11ac9;
          }
          .btn:focus{
                box-shadow: none ; 
            }
            a{  display: flex;
                justify-content: left;
                float: left;
                font-weight: 500;
                color:rgb(91, 194, 238);
                float: right;
            }
            a:hover{
            color: rgb(8, 132, 185);
            text-decoration: none;
          }
          h1{
                font-weight: 700;
                background: linear-gradient(to right,#951ac9 ,#c11ac9 );
                -webkit-text-fill-color: transparent;
			    -webkit-background-clip: text;
          }

        .inp{
            border-top: none;
            border-right: none;
            border-left: none;
            border-radius: 0;
            
          }
        .inp:focus{
          box-shadow: none;
          border-bottom:2px solid #951ac9;
        }

        </style>
    </head>
    <body>
        <div class="container p-5 mt-5">
            <div class="row d-flex justify-content-center pt-5 mt-5">
                <h1>Forgot Password</h1>
            </div>
            <div class="row d-flex justify-content-center">   
                <form  method="post" onsubmit="return forgot_password();" action="/forgot_password" class="form p-5 text-center">
                    <div class="form-group form w-100">
                        <label for="email">Enter your registerd email address</label>
                        <input type="email" class="form-control inp mt-3" name="email" placeholder="Email Address*" id="email" required>
                    </div>
                    
                      <a href="/login">Go Back</a><br>
                      <button type="submit" class="btn pl-5 pr-5 mt-4" id="reset_pswd">Reset Password</button>     
                    
                    <p style="color:red" class="pt-3" id="error_msg"><%= err_msg %></p>
                    <p class="text-success pt-3"><%= change_msg %></p>
                  </form>
            </div>
            
        </div>

        <script>

        function forgot_password(){
               let email=document.getElementById("email").value;
               let reset_pswd=document.getElementById("reset_pswd");
               let error_msg=document.getElementById("error_msg");
                error_msg.innerText=" ";
        
            if(email==""){
              error_msg.innerText="Empty field is not allowed!!";
              return false;
            }else if(email.trim()==""){
                error_msg.innerText="Spaces are not allowed!!";
              return false;
            }else if(email.match(/^\d+/) || email.match(/[!#$%^&*()_+\-=\[\]{};':"\\|,<>\/?]+/)){
              error_msg.innerText="Email is not valid!!";
              return false;
            }else{
              reset_pswd.disabled=true;
              return true;
            }
        } 
           
        </script>
    </body>
</html>